@model FFMP.Data.User

@{
    ViewData["Title"] = "Details";
}


@section Scripts {
    @{
        await Html.RenderPartialAsync("_Navbar");
    <script type="text/javascript">
                            $(document).ready(function () {
                                $('#p2').keyup(function () {
                                    var Password = $('#p1').val();
                                    var ConfirmPassword = $('#p2').val();
                                    //console.log('working :' + Password + ' ' + ConfirmPassword);
                               
                                    if (Password == ConfirmPassword) {
                                      $('#save').prop('disabled', false);
                                $('#nomatch').text("");
                                    }
                                    else {
                                $('#save').prop('disabled', true);
                                      $('#nomatch').text("Passwords need to match");                           
                                    }
                                });

                        $('#p1').keyup(function () {
                            var Password = $('#p1').val();
                            var ConfirmPassword = $('#p2').val();

                            if (Password == ConfirmPassword) {
                                $('#save').prop('disabled', false);
                        $('#nomatch').text("");
                            }
                            else {
                                $('#save').prop('disabled', true);
                        $('#nomatch').text("Passwords need to match");
                    }
                        });
                            });
    </script>



    }
    }

    <div>
        <h4>User</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Password)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Password)
            </dd>
        </dl>
    </div>
    <div>
        <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="@("#editFUser-"+Model?.Login)" data-bs-url="@Url.Action($"EditForUser/{Model?.Login}")">Edit User</button>
        @await Html.PartialAsync("_EditUserPartialView",Model)
        @*<a asp-action="EditForUser" asp-route-id="@Model?.Login">Edit account information</a> |*@
        <a asp-action="Index" asp-route-id="@Model?.Login">Back to main</a>
    </div>




