@model IEnumerable<FFMP.Data.User>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, FFMP

@{
    ViewData["Title"] = "IndexUsers";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="IndexUsers">All
                            users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Login">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>



<p>
    <a asp-action="Create">Create New User</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
            <a asp-action="IndexUsers" asp-route-sortOrder="@ViewData["NameSortParam"]">
            @Html.DisplayNameFor(model => model.Name)
            </a>
            </th>
            @* <th>@Html.DisplayNameFor(model => model.Password)</th> *@
            <th>
             <a asp-action="IndexUsers" asp-route-sortOrder="@ViewData["CreatedSortParam"]">
            @Html.DisplayNameFor(model => model.Created)
            </a>
            </th>
            @*<th>@Html.DisplayNameFor(model => model.LastLogin)</th>*@
            <th>@Html.DisplayNameFor(model => model.Admin)</th>
            <th>@Html.DisplayNameFor(model => model.Active)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                
                @* <td>@Html.DisplayFor(modelItem => item.Password)</td> *@

                <td>@Html.DisplayFor(modelItem => item.Created)</td>
                
                @*<td>@Html.DisplayFor(modelItem => item.LastLogin)</td>*@
               
                <td>@if(item.Admin == true){@Html.Raw("True")}
                    else if(item.Admin == false){@Html.Raw("False")}
                </td>
                <td>@if(item.Active == true){@Html.Raw("True")}
                    else if(item.Active == false){@Html.Raw("False")}
                </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Login">Edit</a> |
                    @*<a asp-action="Details" asp-route-id="@item.Login">Details</a> |*@
                    <a asp-action="Delete" asp-route-id="@item.Login">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
