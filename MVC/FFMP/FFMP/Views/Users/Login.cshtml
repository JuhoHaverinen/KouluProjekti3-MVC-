@model FFMP.Data.User
@{
    ViewData["Title"] = "Login";
}

    
<div class="center2">
<div class="row">
    <div class="col-md-4, d-flex justify-content-center">
        <form asp-action="Login" asp-route-login="@Model?.Login" asp-route-password="@Model?.Password">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="Login" class="control-label"></label>*@
                <input asp-for="Login" class="form-control" placeholder="Username" />
                <br />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Password" class="control-label"></label>*@
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <br />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="center">
    
                <input type="submit" value="Login" class="btn btn-primary"/>  
            </div>
                
        </form>
    </div>
</div>
</div>


<style>
    .center {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 20px;
        border: 0px;
    }

        .center2 {
            margin: 0;
            position: fixed;
            top: 50%;
            left: 50%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
        }
</style>
