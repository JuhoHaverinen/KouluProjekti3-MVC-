@model FFMP.Data.AuditingForm

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AuditingForm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AuditingId" />
            <div class="form-group">
                <label asp-for="UserLogin" class="control-label"></label>
                <select asp-for="UserLogin" class="form-control" asp-items="ViewBag.UserLogin"></select>
                <span asp-validation-for="UserLogin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TargetGroupId" class="control-label"></label>
                <select asp-for="TargetGroupId" class="form-control" asp-items="ViewBag.TargetGroupId"></select>
                <span asp-validation-for="TargetGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Created" class="control-label"></label>
                <input asp-for="Created" class="form-control" />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    <p>
        <a asp-controller="Requirements" asp-action="Create" asp-route-AuditingAuditingId="@Model.AuditingId">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Description
                </th>
                <th>
                    Must
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Requirements)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Must)
                    </td>
                    <td>
                        <a asp-controller="Requirements" asp-action="Edit" asp-route-id="@item.ReqId">Edit</a> |
                        <a asp-controller="Requirements" asp-action="Delete" asp-route-id="@item.ReqId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
