@model FFMP.Data.Inspection


<div class="modal fade" id="createInspection" aria-labelledby="CreateInspectionLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createInspectionLabel">Create Inspection</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserLogin" class="control-label"></label>
                <select asp-for="UserLogin" class ="form-control" asp-items="ViewBag.UserLogin"></select>
            </div>
            <div class="form-group">
                <label asp-for="ObjectId" class="control-label"></label>
                <select asp-for="ObjectId" class ="form-control" asp-items="ViewBag.ObjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observations" class="control-label"></label>
                <input asp-for="Observations" class="form-control" />
                <span asp-validation-for="Observations" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChangeOfState" class="control-label"></label>
                <input asp-for="ChangeOfState" class="form-control" />
                <span asp-validation-for="ChangeOfState" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Inspectioncol" class="control-label"></label>
                <input asp-for="Inspectioncol" class="form-control" />
                <span asp-validation-for="Inspectioncol" class="text-danger"></span>
            </div>*@
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
        </form>
    </div>
</div>
</div>
</div>
